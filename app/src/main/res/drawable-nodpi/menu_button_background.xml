<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item 
		android:state_selected="false"
		android:state_pressed="false">
		<shape
			android:shape="oval">
			<solid
				android:color="#dddddddd"/>
			<stroke
				android:width="1dp"
				android:color="#dd777777"
				android:dashGap="2dp"
				android:dashWidth="4dp"/>
		</shape>
	</item>

	<item
		android:state_pressed="true">
		<shape
			android:shape="oval">
			<solid
				android:color="#ddaaaaaa"/>
			<stroke
				android:width="1dp"
				android:color="#dd777777"
				android:dashGap="2dp"
				android:dashWidth="4dp"/>
		</shape>
	</item>

	<item 
		android:state_selected="true"
		android:state_pressed="false">
		<shape
			android:shape="oval">
			<solid
				android:color="#ddaaaaaa"/>
			<stroke
				android:width="1dp"
				android:color="#dd777777"
				android:dashGap="2dp"
				android:dashWidth="4dp"/>
		</shape>
	</item>

</selector>
